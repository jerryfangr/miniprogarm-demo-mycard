<!--components/w-opearte-button/w-operate-button.wxml-->
<view 
  class="operate-btn" 
  hover-class="hover"
  hover-start-time="0"
  hover-stay-time="0"
  style="background: {{background}}">
  <image 
    class="icon" 
    src="{{icon}}" 
    mode="heightFix"></image>
  <text class="title">{{title}}</text>
</view>
